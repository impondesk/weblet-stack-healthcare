---
const { title, subTitle, excerpt, heroImage, logo, variant, clazz } =
  Astro.props;

let className = variant === "center" ? " text-center lg:text-center " : "";
---

{
  title && (
    <section class={`max-w-7xl mx-auto py-0 ${className} ${clazz || ""}`}>
      {subTitle && (
        <p class="mt-2 text-base uppercase font-semibold">{subTitle}</p>
      )}

      {title && (
        <p class="mt-4 text-4xl font-semibold tracking-tight text-pretty  sm:text-5xl">
          {title}
        </p>
      )}

      {excerpt && (
        <p class="max-w-7xl py-2 dark:text-gray-400 mx-auto text-xl/8 text-gray-600">
          {excerpt}
        </p>
      )}
    </section>
  )
}

