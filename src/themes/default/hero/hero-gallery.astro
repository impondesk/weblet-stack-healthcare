---
const {} = Astro.props;
---

<section class="py-12 bg-gray-50 sm:py-16 lg:py-20">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="lg:flex lg:items-end lg:justify-between">
      <div class="max-w-md mx-auto text-center lg:text-left lg:mx-0">
        <h2 class="text-3xl font-bold text-gray-900">Vibes</h2>
        <p class="mt-6 text-base font-medium text-gray-500">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Elementum
          tortor cum dictum nulla.
        </p>
      </div>

      <div class="hidden lg:items-center lg:justify-end lg:space-x-3 lg:flex">
        <button
          type="button"
          class="p-1.5 -m-1.5 text-gray-300 transition-all duration-200 rounded-full hover:text-gray-600 hover:bg-gray-100"
        >
          <svg
            class="w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
        </button>

        <button
          type="button"
          class="p-1.5 -m-1.5 text-gray-300 transition-all duration-200 rounded-full hover:text-gray-600 hover:bg-gray-100"
        >
          <svg
            class="w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div
    id="gallery-scroll"
    class="flex w-full gap-6 pb-8 mt-12 overflow-x-auto sm:mt-16 snap-x hide-scrollbar"
  >
    <div class="relative snap-start scroll-ml-6 shrink-0 first:pl-6 last:pr-6">
      <img
        class="h-auto w-[332px]"
        src="https://landingfoliocom.imgix.net/store/collection/niftyui/images/gallery/2/image-1.png"
        alt=""
      />
      <p class="mt-5 text-base font-bold text-gray-600">Handx Opr</p>
    </div>

    <div class="relative snap-start scroll-ml-6 shrink-0 first:pl-6 last:pr-6">
      <img
        class="h-auto w-[332px]"
        src="https://landingfoliocom.imgix.net/store/collection/niftyui/images/gallery/2/image-2.png"
        alt=""
      />
      <p class="mt-5 text-base font-bold text-gray-600">Handx Opr</p>
    </div>

    <div class="relative snap-start scroll-ml-6 shrink-0 first:pl-6 last:pr-6">
      <img
        class="h-auto w-[332px]"
        src="https://landingfoliocom.imgix.net/store/collection/niftyui/images/gallery/2/image-3.png"
        alt=""
      />
      <p class="mt-5 text-base font-bold text-gray-600">Handx Opr</p>
    </div>

    <div class="relative snap-start scroll-ml-6 shrink-0 first:pl-6 last:pr-6">
      <img
        class="h-auto w-[332px]"
        src="https://landingfoliocom.imgix.net/store/collection/niftyui/images/gallery/2/image-4.png"
        alt=""
      />
      <p class="mt-5 text-base font-bold text-gray-600">Handx Opr</p>
    </div>

    <div class="relative snap-start scroll-ml-6 shrink-0 first:pl-6 last:pr-6">
      <img
        class="h-auto w-[332px]"
        src="https://landingfoliocom.imgix.net/store/collection/niftyui/images/gallery/2/image-5.png"
        alt=""
      />
      <p class="mt-5 text-base font-bold text-gray-600">Handx Opr</p>
    </div>
  </div>

  <div class="flex items-center justify-center mt-4 space-x-3 lg:hidden">
    <button
      type="button"
      class="p-1.5 -m-1.5 text-gray-300 transition-all duration-200 rounded-full hover:text-gray-600 hover:bg-gray-100"
      onclick="scrollGallery('left')"
      aria-label="Scroll left"
    >
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    </button>

    <button
      type="button"
      class="p-1.5 -m-1.5 text-gray-300 transition-all duration-200 rounded-full hover:text-gray-600 hover:bg-gray-100"
      onclick="scrollGallery('right')"
      aria-label="Scroll right"
    >
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </button>
  </div>

  <script>
    function scrollGallery(direction) {
      const container = document.getElementById("gallery-scroll");
      if (!container) return;
      const scrollAmount = 350; // Adjust as needed
      if (direction === "left") {
        container.scrollBy({ left: -scrollAmount, behavior: "smooth" });
      } else {
        container.scrollBy({ left: scrollAmount, behavior: "smooth" });
      }
    }
  </script>
</section>
