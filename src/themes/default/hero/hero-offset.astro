---
import LinksBlock from "../../../components/links-block.astro";

const {
  subTitle,
  title,
  excerpt,
  summary,
  description,
  heroImage,
  bgMood,
  links,
  lists,
  decorator,
  disclaimer,
} = Astro.props;
---

<section class="" data-decorator={decorator}>
  <div class="mx-auto max-w-7xl px-6-x py-32 sm:py-40 lg:px-8-x">
    <div
      class={`mx-auto max-w-2xl lg:mx-0 lg:max-w-none lg:gap-x-16 lg:gap-y-8 xl:grid-cols-1 xl:grid-rows-1 xl:gap-x-8` +
        (heroImage && heroImage.url ? " lg:grid lg:grid-cols-2" : "")}
    >
      <h1
        class="max-w-3xl text-5xl font-semibold text-balance sm:text-7xl lg:col-span-2 xl:col-auto"
      >
        <p
          class="text-sm leading-normal font-bold uppercase text-accent-600 py-2"
        >
          {subTitle}
        </p>
        {title}
      </h1>
      <div
        class={`max-w-xl xl:col-end-1 xl:row-start-1` +
          (heroImage && heroImage.url ? " mt-6 lg:mt-0" : " mt-10")}
      >
        <p
          class="text-base font-medium text-pretty text-dark-500 dark:text-dark-400"
        >
          {excerpt}
        </p>

        {
          summary && (
            <p class="text-base font-medium text-pretty text-dark-500 dark:text-dark-400 mt-2">
              {summary}
            </p>
          )
        }

        {
          description && (
            <p class="text-sm font-medium text-pretty text-dark-500 dark:text-dark-400 mt-2">
              {description}
            </p>
          )
        }

        <ul class="mt-4 space-y-2 pt-4">
          {
            lists &&
              lists.length > 0 &&
              lists.map((item) => (
                <li
                  class="flex items-start gap-x-2 text-sm text-dark-600 dark:text-dark-300"
                  key={item.id}
                >
                  <span class="inline-block text-primary-600 mt-0.5">âœ”</span>
                  {item.label}
                </li>
              ))
          }
        </ul>
        <div class="mt-10 flex flex-col items-start gap-y-2 gap-x-6">
          <div class="flex items-center gap-x-6">
            <LinksBlock {...{ links, bgMood }} />
          </div>
          <small class="text-xs text-dark-400 dark:text-dark-300 mt-2"
            >{disclaimer}</small
          >
        </div>
      </div>
      {
        heroImage && heroImage.url && (
          <img
            src={heroImage.url}
            alt=""
            class="mt-10 aspect-6/5 w-full max-w-lg rounded-2xl object-cover outline-1 -outline-offset-1 outline-black/5 sm:mt-16 lg:mt-0 lg:max-w-none xl:row-span-2 xl:row-end-2 xl:mt-36 dark:outline-white/10"
          />
        )
      }
    </div>
  </div>
</section>
