---
import LinksBlock from "../../../components/links-block.astro";

const {
  subTitle,
  title,
  excerpt,
  heroImage,
  bgMood,
  links,
  decorator,
  disclaimer,
} = Astro.props;
---

<section class="" data-decorator={decorator}>
  <div class="mx-auto max-w-7xl px-6 py-32 sm:py-40 lg:px-8">
    <div
      class="mx-auto max-w-2xl lg:mx-0 lg:grid lg:max-w-none lg:grid-cols-2 lg:gap-x-16 lg:gap-y-8 xl:grid-cols-1 xl:grid-rows-1 xl:gap-x-8"
    >
      <h1
        class="max-w-3xl text-5xl font-semibold text-balance sm:text-7xl lg:col-span-2 xl:col-auto"
      >
        <p
          class="text-sm leading-normal font-bold uppercase text-accent-600 py-2"
        >
          {subTitle}
        </p>
        {title}
      </h1>
      <div class="mt-6 max-w-xl lg:mt-0 xl:col-end-1 xl:row-start-1">
        <p
          class="text-base font-medium text-pretty text-dark-500 dark:text-dark-400"
        >
          {excerpt}
        </p>
        <div class="mt-10 flex flex-col items-start gap-y-2 gap-x-6">
          <div class="flex items-center gap-x-6">
            <LinksBlock {...{ links, bgMood }} />
          </div>
          <small class="text-xs text-dark-400 dark:text-dark-300 mt-2"
            >{disclaimer}</small
          >
        </div>
      </div>
      {
        heroImage && heroImage.url && (
          <img
            src={heroImage.url}
            alt=""
            class="mt-10 aspect-6/5 w-full max-w-lg rounded-2xl object-cover outline-1 -outline-offset-1 outline-black/5 sm:mt-16 lg:mt-0 lg:max-w-none xl:row-span-2 xl:row-end-2 xl:mt-36 dark:outline-white/10"
          />
        )
      }
    </div>
  </div>
</section>
