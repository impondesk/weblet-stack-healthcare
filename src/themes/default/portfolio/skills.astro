---
const { skills } = Astro.props;
---

<section class="bg-white shadow rounded-lg p-6">
  <h2 class="text-2xl font-semibold mb-4">Skills & Endorsements</h2>

  <div class="space-y-6">
    {
      skills.map((skillGroup) => (
        <div>
          <h4 class="text-lg font-semibold mb-2">{skillGroup.category}</h4>
          <div class="flex flex-wrap gap-2">
            {skillGroup.items.map((item) => (
              <span
                class={`px-3 py-1 bg-blue-100 text-blue-800 ${skillGroup.color} rounded-full text-xs`}
              >
                {item}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
