---
import SectionTitle from "../../section-title.astro";

const { records } = Astro.props;

// Helper function to format day name
const formatDay = (day: string) => {
  return day.charAt(0).toUpperCase() + day.slice(1);
};
---

<!-- {JSON.stringify(Astro.props, null, 2)} -->
<section class="relative w-full max-w-7xl mx-auto lg:pb-24">
  <SectionTitle {...Astro.props} />

  <div class="py-4 px-2 lg:px-0">
    {
      !records || records.length === 0 ? (
        <p class="text-center text-gray-600 py-8">No stores available.</p>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {records.map((store) => {
            const address = store?.address || {};
            const contact = store?.contact || {};
            const hours = store?.hours || {};
            const location = store?.location || {};
            const manager = store?.manager || {};
            const isActive = store?.status === "active";

            return (
              <article class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow duration-200 bg-white">
                {/* Store Header */}
                <div class="mb-4">
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <h3 class="text-lg font-semibold text-gray-900 flex-1">
                      {store?.name}
                    </h3>
                    {store?.status && (
                      <span
                        class={`inline-block text-xs font-medium px-2 py-1 rounded ${
                          isActive
                            ? "bg-green-100 text-green-700"
                            : "bg-gray-100 text-gray-700"
                        }`}
                      >
                        {store.status.charAt(0).toUpperCase() +
                          store.status.slice(1)}
                      </span>
                    )}
                  </div>
                  {store?.storeCode && (
                    <p class="text-sm text-gray-500 font-mono">
                      {store.storeCode}
                    </p>
                  )}
                </div>

                {/* Address */}
                {address && (
                  <div class="mb-4 space-y-1">
                    <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      Address
                    </h4>
                    {address.street && (
                      <p class="text-sm text-gray-600">{address.street}</p>
                    )}
                    <p class="text-sm text-gray-600">
                      {[address.city, address.state, address.zipCode]
                        .filter(Boolean)
                        .join(", ")}
                    </p>
                    {address.landmark && (
                      <p class="text-xs text-gray-500 italic">
                        Landmark: {address.landmark}
                      </p>
                    )}
                  </div>
                )}

                {/* Contact */}
                {contact && (
                  <div class="mb-4 space-y-2">
                    <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        />
                      </svg>
                      Contact
                    </h4>
                    {contact.phone && (
                      <a
                        href={`tel:${contact.phone}`}
                        class="text-sm text-blue-600 hover:no-underline block"
                      >
                        üìû {contact.phone}
                      </a>
                    )}
                    {contact.email && (
                      <a
                        href={`mailto:${contact.email}`}
                        class="text-sm text-blue-600 hover:no-underline block"
                      >
                        ‚úâÔ∏è {contact.email}
                      </a>
                    )}
                    {contact.whatsapp && (
                      <a
                        href={`https://wa.me/${contact.whatsapp.replace(/[^0-9]/g, "")}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-green-600 hover:no-underline block"
                      >
                        üí¨ WhatsApp
                      </a>
                    )}
                  </div>
                )}

                {/* Operating Hours */}
                {hours && Object.keys(hours).length > 0 && (
                  <div class="mb-4">
                    <h4 class="text-sm font-semibold text-gray-700 mb-2 flex items-center gap-1">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      Hours
                    </h4>
                    <details class="text-sm">
                      <summary class="cursor-pointer text-blue-600 hover:underline">
                        View hours
                      </summary>
                      <div class="mt-2 space-y-1 pl-2">
                        {Object.entries(hours).map(([day, time]) => (
                          <div class="flex justify-between gap-2">
                            <span class="text-gray-600 capitalize">
                              {formatDay(day)}:
                            </span>
                            <span class="text-gray-900 font-medium">
                              {time}
                            </span>
                          </div>
                        ))}
                      </div>
                    </details>
                  </div>
                )}

                {/* Manager */}
                {manager?.name && (
                  <div class="mb-4">
                    <h4 class="text-sm font-semibold text-gray-700 mb-1 flex items-center gap-1">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                        />
                      </svg>
                      Manager
                    </h4>
                    <p class="text-sm text-gray-600">{manager.name}</p>
                    {manager.phone && (
                      <a
                        href={`tel:${manager.phone}`}
                        class="text-xs text-blue-600 hover:no-underline"
                      >
                        {manager.phone}
                      </a>
                    )}
                  </div>
                )}

                {/* Actions */}
                <div class="flex gap-2 pt-4 border-t border-gray-100">
                  {location?.mapUrl && (
                    <a
                      href={location.mapUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 inline-flex items-center justify-center gap-1 text-sm font-medium text-blue-600 hover:text-blue-700 py-2 px-3 rounded border border-blue-200 hover:bg-blue-50 transition-colors"
                    >
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                        />
                      </svg>
                      View Map
                    </a>
                  )}
                  {/* {store?.slug && (
                    <a
                      href={`/stores/${store.slug}`}
                      class="flex-1 inline-flex items-center justify-center gap-1 text-sm font-medium text-gray-700 hover:text-gray-900 py-2 px-3 rounded border border-gray-200 hover:bg-gray-50 transition-colors"
                    >
                      View Details
                    </a>
                  )} */}
                </div>
              </article>
            );
          })}
        </div>
      )
    }
  </div>
</section>
