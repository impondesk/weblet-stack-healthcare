---
import SectionTitle from "../../section-title.astro";

const { records } = Astro.props;
---

<section class="relative w-full max-w-7xl mx-auto lg:pb-24">
  <SectionTitle {...Astro.props} />

  <div class="py-4 px-2 lg:px-0">
    {
      !records || records.length === 0 ? (
        <p class="text-center text-gray-600 py-8">No stores available.</p>
      ) : (
        <div class="space-y-4">
          {records.map((store) => {
            const address = store?.address || {};
            const contact = store?.contact || {};
            const location = store?.location || {};
            const isActive = store?.status === "active";

            return (
              <article class="border border-gray-200 rounded-lg p-4 lg:p-6 hover:shadow-md transition-shadow duration-200 bg-white">
                <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                  {/* Left side: Store info */}
                  <div class="flex-1 space-y-3">
                    {/* Header */}
                    <div class="flex items-start gap-3 flex-wrap">
                      <div class="flex-1 min-w-0">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1">
                          {store?.name}
                        </h3>
                        {store?.storeCode && (
                          <p class="text-xs text-gray-500 font-mono">
                            {store.storeCode}
                          </p>
                        )}
                      </div>
                      {store?.status && (
                        <span
                          class={`inline-block text-xs font-medium px-2 py-1 rounded whitespace-nowrap ${
                            isActive
                              ? "bg-green-100 text-green-700"
                              : "bg-gray-100 text-gray-700"
                          }`}
                        >
                          {store.status.charAt(0).toUpperCase() +
                            store.status.slice(1)}
                        </span>
                      )}
                    </div>

                    {/* Address and Contact in columns */}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      {/* Address */}
                      {(address.street || address.city) && (
                        <div class="space-y-1">
                          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide flex items-center gap-1">
                            <svg
                              class="w-3.5 h-3.5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                              />
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                              />
                            </svg>
                            Location
                          </h4>
                          {address.street && (
                            <p class="text-sm text-gray-700 line-clamp-2">
                              {address.street}
                            </p>
                          )}
                          <p class="text-sm text-gray-600">
                            {[address.city, address.state, address.zipCode]
                              .filter(Boolean)
                              .join(", ")}
                          </p>
                          {address.landmark && (
                            <p class="text-xs text-gray-500 italic">
                              {address.landmark}
                            </p>
                          )}
                        </div>
                      )}

                      {/* Contact */}
                      {(contact.phone || contact.email) && (
                        <div class="space-y-1">
                          <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide flex items-center gap-1">
                            <svg
                              class="w-3.5 h-3.5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                              />
                            </svg>
                            Contact
                          </h4>
                          {contact.phone && (
                            <a
                              href={`tel:${contact.phone}`}
                              class="text-sm text-blue-600 hover:underline block"
                            >
                              üìû {contact.phone}
                            </a>
                          )}
                          {contact.email && (
                            <a
                              href={`mailto:${contact.email}`}
                              class="text-sm text-blue-600 hover:underline block"
                            >
                              ‚úâÔ∏è {contact.email}
                            </a>
                          )}
                          {contact.whatsapp && (
                            <a
                              href={`https://wa.me/${contact.whatsapp.replace(/[^0-9]/g, "")}`}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-sm text-green-600 hover:underline block"
                            >
                              üí¨ WhatsApp
                            </a>
                          )}
                        </div>
                      )}
                    </div>
                  </div>

                  {/* Right side: Actions */}
                  <div class="flex lg:flex-col gap-2 lg:min-w-[140px]">
                    {location?.mapUrl && (
                      <a
                        href={location.mapUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex-1 lg:flex-none inline-flex items-center justify-center gap-1 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded transition-colors"
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                          />
                        </svg>
                        <span class="hidden lg:inline">Directions</span>
                        <span class="lg:hidden">Map</span>
                      </a>
                    )}
                    {contact?.phone && (
                      <a
                        href={`tel:${contact.phone}`}
                        class="flex-1 lg:flex-none inline-flex items-center justify-center gap-1 text-sm font-medium text-gray-700 hover:text-gray-900 py-2 px-4 rounded border border-gray-300 hover:bg-gray-50 transition-colors"
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                          />
                        </svg>
                        <span class="hidden lg:inline">Call Now</span>
                        <span class="lg:hidden">Call</span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      )
    }
  </div>
</section>
