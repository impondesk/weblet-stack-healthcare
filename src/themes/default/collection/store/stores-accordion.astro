---
import SectionTitle from "../../section-title.astro";

const { records } = Astro.props;

// Helper function to format day name
const formatDay = (day: string) => {
  return day.charAt(0).toUpperCase() + day.slice(1);
};
---

<section class="relative w-full max-w-7xl mx-auto lg:pb-24">
  <SectionTitle {...Astro.props} />

  <div class="py-4 px-2 lg:px-0">
    {
      !records || records.length === 0 ? (
        <p class="text-center text-gray-600 py-8">No stores available.</p>
      ) : (
        <div class="space-y-3">
          {records.map((store, index) => {
            const address = store?.address || {};
            const contact = store?.contact || {};
            const hours = store?.hours || {};
            const location = store?.location || {};
            const manager = store?.manager || {};
            const isActive = store?.status === "active";

            return (
              <details class="group border border-gray-200 rounded-lg bg-white hover:shadow-md transition-all duration-200">
                <summary class="flex items-center justify-between gap-4 p-4 cursor-pointer select-none list-none">
                  <div class="flex-1 flex items-center gap-3 min-w-0">
                    {/* Chevron Icon */}
                    <svg
                      class="w-5 h-5 text-gray-500 transition-transform duration-200 group-open:rotate-90 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>

                    {/* Store Name and Info */}
                    <div class="flex-1 min-w-0">
                      <h3 class="text-base lg:text-lg font-semibold text-gray-900 truncate">
                        {store?.name}
                      </h3>
                      <div class="flex items-center gap-2 mt-1 flex-wrap">
                        {store?.storeCode && (
                          <span class="text-xs text-gray-500 font-mono">
                            {store.storeCode}
                          </span>
                        )}
                        {address.city && (
                          <span class="text-xs text-gray-600">
                            üìç {address.city}
                            {address.state && `, ${address.state}`}
                          </span>
                        )}
                      </div>
                    </div>

                    {/* Status Badge */}
                    {store?.status && (
                      <span
                        class={`inline-flex text-xs font-medium px-2.5 py-1 rounded whitespace-nowrap ${
                          isActive
                            ? "bg-green-100 text-green-700"
                            : "bg-gray-100 text-gray-700"
                        }`}
                      >
                        {store.status.charAt(0).toUpperCase() +
                          store.status.slice(1)}
                      </span>
                    )}
                  </div>
                </summary>

                {/* Expanded Content */}
                <div class="px-4 pb-4 pt-2 border-t border-gray-100">
                  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    {/* Left Column */}
                    <div class="space-y-4">
                      {/* Address */}
                      {(address.street || address.city) && (
                        <div class="space-y-2">
                          <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1.5">
                            <svg
                              class="w-4 h-4 text-gray-500"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                              />
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                              />
                            </svg>
                            Address
                          </h4>
                          <div class="text-sm text-gray-600 space-y-1 pl-5">
                            {address.street && <p>{address.street}</p>}
                            <p>
                              {[address.city, address.state, address.zipCode]
                                .filter(Boolean)
                                .join(", ")}
                            </p>
                            {address.country && <p>{address.country}</p>}
                            {address.landmark && (
                              <p class="text-xs italic text-gray-500">
                                Landmark: {address.landmark}
                              </p>
                            )}
                          </div>
                        </div>
                      )}

                      {/* Contact */}
                      {(contact.phone || contact.email || contact.whatsapp) && (
                        <div class="space-y-2">
                          <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1.5">
                            <svg
                              class="w-4 h-4 text-gray-500"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                              />
                            </svg>
                            Contact Information
                          </h4>
                          <div class="space-y-2 pl-5">
                            {contact.phone && (
                              <a
                                href={`tel:${contact.phone}`}
                                class="text-sm text-blue-600 hover:underline flex items-center gap-1.5"
                              >
                                üìû {contact.phone}
                              </a>
                            )}
                            {contact.email && (
                              <a
                                href={`mailto:${contact.email}`}
                                class="text-sm text-blue-600 hover:underline flex items-center gap-1.5 break-all"
                              >
                                ‚úâÔ∏è {contact.email}
                              </a>
                            )}
                            {contact.whatsapp && (
                              <a
                                href={`https://wa.me/${contact.whatsapp.replace(/[^0-9]/g, "")}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-sm text-green-600 hover:underline flex items-center gap-1.5"
                              >
                                üí¨ WhatsApp: {contact.whatsapp}
                              </a>
                            )}
                          </div>
                        </div>
                      )}
                    </div>

                    {/* Right Column */}
                    <div class="space-y-4">
                      {/* Operating Hours */}
                      {hours && Object.keys(hours).length > 0 && (
                        <div class="space-y-2">
                          <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1.5">
                            <svg
                              class="w-4 h-4 text-gray-500"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                            Operating Hours
                          </h4>
                          <div class="space-y-1.5 pl-5 text-sm">
                            {Object.entries(hours).map(([day, time]) => (
                              <div class="flex justify-between gap-4">
                                <span class="text-gray-600 capitalize font-medium">
                                  {formatDay(day)}
                                </span>
                                <span class="text-gray-900">{time}</span>
                              </div>
                            ))}
                          </div>
                        </div>
                      )}

                      {/* Manager */}
                      {manager?.name && (
                        <div class="space-y-2">
                          <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-1.5">
                            <svg
                              class="w-4 h-4 text-gray-500"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                              />
                            </svg>
                            Store Manager
                          </h4>
                          <div class="pl-5 space-y-1">
                            <p class="text-sm text-gray-900 font-medium">
                              {manager.name}
                            </p>
                            {manager.phone && (
                              <a
                                href={`tel:${manager.phone}`}
                                class="text-sm text-blue-600 hover:underline block"
                              >
                                üìû {manager.phone}
                              </a>
                            )}
                            {manager.email && (
                              <a
                                href={`mailto:${manager.email}`}
                                class="text-sm text-blue-600 hover:underline block break-all"
                              >
                                ‚úâÔ∏è {manager.email}
                              </a>
                            )}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>

                  {/* Action Buttons */}
                  <div class="flex flex-wrap gap-2 mt-6 pt-4 border-t border-gray-100">
                    {location?.mapUrl && (
                      <a
                        href={location.mapUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center gap-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 py-2.5 px-4 rounded-lg transition-colors"
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                          />
                        </svg>
                        Get Directions
                      </a>
                    )}
                    {contact?.phone && (
                      <a
                        href={`tel:${contact.phone}`}
                        class="inline-flex items-center justify-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700 py-2.5 px-4 rounded-lg border border-blue-600 hover:bg-blue-50 transition-colors"
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                          />
                        </svg>
                        Call Store
                      </a>
                    )}
                    {contact?.whatsapp && (
                      <a
                        href={`https://wa.me/${contact.whatsapp.replace(/[^0-9]/g, "")}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center gap-2 text-sm font-medium text-green-600 hover:text-green-700 py-2.5 px-4 rounded-lg border border-green-600 hover:bg-green-50 transition-colors"
                      >
                        üí¨ WhatsApp
                      </a>
                    )}
                  </div>
                </div>
              </details>
            );
          })}
        </div>
      )
    }
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
