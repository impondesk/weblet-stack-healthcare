---
const { title, slug, blockType, contentType, excerpt, labels, authors } =
  Astro.props;
// console.log("Collection Default Item Props:", Astro.props);

const collectionName = labels?.singular.replace(/\s+/g, "").toLowerCase();
const url = `/${collectionName}/${slug}`;

const author = authors && authors[0];
---

<a
  href={url}
  aria-label={title || url}
  class="group break-inside-avoid mb-4 no-underline font-semibold hover:text-primary-600 block px-3 rounded-md text-base lg:text-sm xl:text-base py-4"
>
  {title}
  <span class="block text-xs line-clamp-3-x pt-1 text-gray-500">{excerpt}</span>
</a>
