---

<li
  class="group ring-1 ring-inset ring-white/5  p-[0.060rem] overflow-hidden shadow-vulcan-950 shadow-2xl"
>
  <a
    href={Array.isArray(domains) && domains.length > 0
      ? `https://${domains[0].domain}`
      : `/`}
    aria-label={name}
    class="no-underline"
    target={Array.isArray(domains) && domains.length > 0 ? "_blank" : undefined}
    rel={Array.isArray(domains) && domains.length > 0 ? "noopener noreferrer" : undefined}
  >
    <div class="bg-vulcan-900">
      <div class="flex items-end justify-center overflow-hidden">
        <div class="flex">
          <div class="image-reveal-container">
            <img
              class="image-reveal transition-transform duration-700"
              loading="lazy"
              src={thumbnail?.url ||
                thumbnail?.ref ||
                `https://placehold.co/600x1000/000000/FFFFFF@3x.png?text=${name}&font=roboto`}
              alt={thumbnail?.alt || name}
              width="560"
            />
          </div>
        <style>
          .image-reveal-container {
            position: relative;
            width: 100%;
            height: 280px; /* Fixed visible area, adjust as needed */
            overflow: hidden;
          }
          .image-reveal {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
            object-position: top center;
              transition: transform 3.5s cubic-bezier(0.4, 0, 0.2, 1);
          }
          .group:hover .image-reveal {
            /* If image is 1000px tall and container is 280px, translateY(-720px) */
            transform: translateY(calc(-100% + 280px));
          }
        </style>
        </div>
      </div>
      <div class="p-8">
        <h3 class="mt-1 text-sm leading-6 font-semibold line-clamp-2">
          {name}
        </h3>
        <p class="mt-2 text-sm line-clamp-3 text-gray-400">
          {excerpt}
        </p>
        {tags && tags.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="inline-block bg-primary-500 text-xs text-white px-2 py-1 rounded-sm font-medium">
                {tag?.title}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </a>
</li>
