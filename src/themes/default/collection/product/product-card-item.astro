---
import { formatDate } from "../../../../scripts/formatDate";

const {
  title,
  featuredImage,
  pubDate,
  createdAt,
  updatedAt,
  description,
  url,
  excerpt,
  slug,
} = Astro.props;
---

<!-- Product Card Item -->
<li
  class="group relative rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300"
>
  <a href={`/product/${slug}`} title={title} class="block no-underline">
    <!-- Image Container -->
    <div class="relative overflow-hidden aspect-[16/10]">
      <img
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
        src={featuredImage?.url ||
          featuredImage?.ref ||
          `https://placehold.co/800x500/e5e7eb/1f2937.png?text=${encodeURIComponent(title)}&font=roboto`}
        alt={featuredImage?.alt || title}
      />
      <!-- Gradient Overlay -->
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- <time
        class="inline-block px-2 py-1 text-xs font-medium text-gray-600 dark:text-gray-400 rounded"
        datetime={updatedAt}
      >
        {formatDate(updatedAt)}
      </time> -->

      <!-- Title -->
      <h3
        class="mt-3 text-lg font-semibold leading-tight line-clamp-2 transition-colors"
      >
        {title}
      </h3>

      <!-- Excerpt -->
      <p
        class="mt-2 text-sm leading-relaxed text-gray-600 dark:text-gray-400 line-clamp-5"
      >
        {excerpt}
      </p>
    </div>
  </a>
</li>
