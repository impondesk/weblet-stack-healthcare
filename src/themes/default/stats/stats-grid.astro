---
const { subTitle, title, excerpt, stats } = Astro.props;
---

<div class="py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="text-center">
        {
          subTitle && (
            <p class="mt-2 uppercase text-sm leading-normal font-bold  text-accent-600">
              {subTitle}
            </p>
          )
        }
        <h2 class="text-4xl font-semibold tracking-tight text-balance pt-4">
          {title}
        </h2>
        <p class="mt-4 text-base">
          {excerpt}
        </p>
      </div>
      <dl
        class="mt-16 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4"
      >
        {
          stats?.map((stat) => (
            <div class="flex flex-col  px-6 py-10">
              <dt class="text-sm/6 font-semibold">{stat.title}</dt>
              <dd class="order-first text-5xl font-semibold tracking-tight">
                {stat.value}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
