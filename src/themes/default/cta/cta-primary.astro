---
import LinksBlock from "../../../components/links-block.astro";

const { subTitle, title, excerpt, links, bgMood = "primary" } = Astro.props;
---

<div class="bg-primary-700 mb-16">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      {
        subTitle && (
          <p class="mt-2 uppercase text-sm leading-normal font-bold  text-primary-200 py-4">
            {subTitle}
          </p>
        )
      }

      <h2
        class="text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl"
      >
        {title}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-primary-200">
        {excerpt}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <LinksBlock
          {...{
            links,
            bgMood,
          }}
        />
