          <LinksBlock {...Astro.props} />
          <small class="text-xs text-dark-400 dark:text-dark-300 mt-2">
            {disclaimer}
          </small>
        </div>
      </div>

      <div
        class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents"
