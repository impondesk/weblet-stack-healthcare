---
import BlockquoteIcon from "../../../assets/blockquote-icon.astro";

const {
  comment,
  summary,
  author,
  role,
  organization,
  website,
  featuredImage,
  description,
} = Astro.props;
---

<!-- {JSON.stringify(Astro.props)} -->
<section class="py-12-x sm:py-16-x lg:py-20-x xl:py-24-x">
  <div class="mx-auto max-w-7xl">
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-y-12 lg:gap-x-16 xl:gap-x-24"
    >
      <div
        class="relative overflow-hidden group lg:order-2 rounded-2xl lg:rounded-3xl"
      >
        <img
          class="object-cover w-full h-full transition-all duration-300 group-hover:scale-110"
          src={featuredImage?.url}
          alt={featuredImage?.alt || author}
        />
        <div
          class="absolute inset-0 pointer-events-none bg-gradient-to-t from-gray-900 via-transparent to-transparent"
        >
        </div>
        <div class="absolute bottom-0 left-0 px-8 py-6">
          <p class="text-lg font-semibold text-white">{author}</p>
          <p class="text-sm font-normal text-gray-400">
            {role}
            {organization}
          </p>
        </div>
      </div>

      <div class="lg:order-1">
        <BlockquoteIcon />
        <blockquote class="mt-8">
          <p
            class="text-base font-medium leading-snug tracking-tight sm:text-xl"
          >
            {comment}
          </p>
          <p class="mt-8 text-base font-medium leading-snug tracking-tight">
            {summary}
          </p>
          <p class="mt-8 text-base font-medium leading-snug tracking-tight">
            {description}
          </p>
        </blockquote>

        <div class="mt-8 sm:mt-12">
          <a
            href="#"
            title=""
            class="inline-flex items-center text-sm font-semibold text-primary-600 transition-all duration-200 group hover:text-primary-800 hover:no-underline"
          >
            Read Story
            <svg
              class="w-5 h-5 ml-1 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-200"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2.5"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
