---
/**
 * Theme Demo Page
 * 
 * This page demonstrates how tenant theme colors are applied.
 * Visit this page from different tenant domains to see color changes.
 */
import Layout from '../layouts/layout.astro';

const hostname = Astro.locals.host;
---

<Layout title="Theme Demo">
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <h1 class="text-4xl font-bold text-primary-600 mb-4">
      Tenant Theme Demo
    </h1>
    
    <div class="bg-secondary-100 border border-secondary-300 rounded-lg p-6 mb-8">
      <p class="text-secondary-900">
        Current hostname: <strong class="text-primary-600">{hostname}</strong>
      </p>
      <p class="text-secondary-700 mt-2">
        The colors on this page will change based on your tenant configuration.
      </p>
    </div>

    <!-- Primary Color Showcase -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-secondary-900 mb-4">
        Primary Colors
      </h2>
      <div class="grid grid-cols-5 gap-4">
        <div class="text-center">
          <div class="bg-primary-50 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">50</p>
        </div>
        <div class="text-center">
          <div class="bg-primary-100 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">100</p>
        </div>
        <div class="text-center">
          <div class="bg-primary-500 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">500</p>
        </div>
        <div class="text-center">
          <div class="bg-primary-600 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">600</p>
        </div>
        <div class="text-center">
          <div class="bg-primary-900 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">900</p>
        </div>
      </div>
    </section>

    <!-- Secondary Color Showcase -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-secondary-900 mb-4">
        Secondary Colors
      </h2>
      <div class="grid grid-cols-5 gap-4">
        <div class="text-center">
          <div class="bg-secondary-50 h-20 rounded-lg border border-secondary-300"></div>
          <p class="text-xs mt-2 text-secondary-600">50</p>
        </div>
        <div class="text-center">
          <div class="bg-secondary-100 h-20 rounded-lg border border-secondary-300"></div>
          <p class="text-xs mt-2 text-secondary-600">100</p>
        </div>
        <div class="text-center">
          <div class="bg-secondary-500 h-20 rounded-lg border border-secondary-300"></div>
          <p class="text-xs mt-2 text-secondary-600">500</p>
        </div>
        <div class="text-center">
          <div class="bg-secondary-600 h-20 rounded-lg border border-secondary-300"></div>
          <p class="text-xs mt-2 text-secondary-600">600</p>
        </div>
        <div class="text-center">
          <div class="bg-secondary-900 h-20 rounded-lg border border-secondary-300"></div>
          <p class="text-xs mt-2 text-secondary-600">900</p>
        </div>
      </div>
    </section>

    <!-- Accent Color Showcase -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-secondary-900 mb-4">
        Accent Colors
      </h2>
      <div class="grid grid-cols-5 gap-4">
        <div class="text-center">
          <div class="bg-accent-50 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">50</p>
        </div>
        <div class="text-center">
          <div class="bg-accent-100 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">100</p>
        </div>
        <div class="text-center">
          <div class="bg-accent-500 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">500</p>
        </div>
        <div class="text-center">
          <div class="bg-accent-600 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">600</p>
        </div>
        <div class="text-center">
          <div class="bg-accent-900 h-20 rounded-lg border border-secondary-200"></div>
          <p class="text-xs mt-2 text-secondary-600">900</p>
        </div>
      </div>
    </section>

    <!-- Component Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-secondary-900 mb-4">
        Component Examples
      </h2>
      
      <!-- Buttons -->
      <div class="mb-6">
        <h3 class="text-lg font-medium text-secondary-800 mb-3">Buttons</h3>
        <div class="flex gap-4 flex-wrap">
          <button class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded-lg transition-colors">
            Primary Button
          </button>
          <button class="bg-secondary-500 hover:bg-secondary-600 text-white px-6 py-2 rounded-lg transition-colors">
            Secondary Button
          </button>
          <button class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-2 rounded-lg transition-colors">
            Accent Button
          </button>
          <button class="border-2 border-primary-500 text-primary-600 hover:bg-primary-50 px-6 py-2 rounded-lg transition-colors">
            Outline Button
          </button>
        </div>
      </div>

      <!-- Cards -->
      <div class="mb-6">
        <h3 class="text-lg font-medium text-secondary-800 mb-3">Cards</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="border border-primary-200 bg-primary-50 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-primary-900 mb-2">Primary Card</h4>
            <p class="text-primary-700">
              This card uses primary color scheme.
            </p>
          </div>
          <div class="border border-accent-200 bg-accent-50 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-accent-900 mb-2">Accent Card</h4>
            <p class="text-accent-700">
              This card uses accent color scheme.
            </p>
          </div>
        </div>
      </div>

      <!-- Badges -->
      <div class="mb-6">
        <h3 class="text-lg font-medium text-secondary-800 mb-3">Badges</h3>
        <div class="flex gap-3 flex-wrap">
          <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">
            Primary
          </span>
          <span class="bg-secondary-100 text-secondary-800 px-3 py-1 rounded-full text-sm font-medium">
            Secondary
          </span>
          <span class="bg-accent-100 text-accent-800 px-3 py-1 rounded-full text-sm font-medium">
            Accent
          </span>
        </div>
      </div>
    </section>

    <!-- CSS Variables Info -->
    <section class="bg-secondary-50 border border-secondary-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-secondary-900 mb-3">
        Current CSS Variables
      </h2>
      <p class="text-secondary-700 mb-4">
        Open your browser's DevTools and inspect the computed styles to see the current CSS variable values.
      </p>
      <div class="bg-white border border-secondary-300 rounded p-4 font-mono text-sm text-secondary-800">
        <div>--color-primary-500: <span class="text-primary-600">var(--color-primary-500)</span></div>
        <div>--color-secondary-500: <span class="text-secondary-600">var(--color-secondary-500)</span></div>
        <div>--color-accent-500: <span class="text-accent-600">var(--color-accent-500)</span></div>
      </div>
    </section>

    <!-- Usage Guide Link -->
    <div class="mt-12 text-center">
      <a 
        href="/TENANT_THEMING_GUIDE.md" 
        class="inline-block bg-primary-500 hover:bg-primary-600 text-white px-8 py-3 rounded-lg font-medium transition-colors"
      >
        View Theming Guide
      </a>
    </div>
  </div>
</Layout>

<style>
  /* Additional custom styles using CSS variables */
  .custom-gradient {
    background: linear-gradient(
      135deg,
      rgb(var(--color-primary-500)),
      rgb(var(--color-accent-500))
    );
  }
</style>
