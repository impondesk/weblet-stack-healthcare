---
const { group, clazz } = Astro.props;
---

<section class="max-w-7xl mx-auto text-center py-2 text-shadow-indigo-600">
  {
    group && group?.title && (
      <div class="hidden sm:mb-2 sm:flex sm:justify-center">
        <div class="relative font-semibold rounded-full px-3 py-1 text-sm/6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20">
          {group?.title}
          <a
            href={`/${group?.type || "group"}/${group?.slug}`}
            class="font-semibold text-indigo-600 pl-6"
            rel="noopener noreferrer"
          >
            <span aria-hidden="true" class="absolute inset-0" />
            Read {group?.type || " more"} <span aria-hidden="true">â†’</span>
          </a>
        </div>
      </div>
    )
  }
</section>
