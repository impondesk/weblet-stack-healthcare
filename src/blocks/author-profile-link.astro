---
const { author, url, clazz } = Astro.props;
---

{
  author && author?.profiles && (
    <a
      rel=" nofollow"
      href={`/profile/${author?.profiles?.slug}`}
      class={`font-medium text-sm pr-0 ${clazz}`}
      data-no-prefetch
      transition:name={`${url}-author`}
    >
      {author?.profiles?.name}
    </a>
  )
}

<!-- Author Name -->
{
  author && !author?.profiles && author?.name && (
    <a
      rel="noopener noreferrer"
      href="#"
      class={`font-semibold ${clazz}`}
      transition:name={`${url}-author`}
    >
      {author?.name}
    </a>
  )
}
