---
export interface Props {
  title?: string;
  description?: string;
  url?: string;
  hashtags?: string[];
  via?: string;
  className?: string;
}

const {
  title = "",
  description = "",
  url = "",
  hashtags = [],
  via = "",
  className = "",
} = Astro.props;

// These will be populated on the client side
const shareData = {
  title,
  description,
  url,
  hashtags: hashtags.join(","),
  via,
};
---

<div
  class={`social-share ${className}`}
  data-share-data={JSON.stringify(shareData)}
>
